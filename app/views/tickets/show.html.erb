<div class="container">
<%= render 'shared/navbar' %>
<h1 class="booking-title">Ticket</h1>
<div class="booking-section d-flex">
<p class="options active">Your ticket for <%= @ticket.booking.event.box.venue %></p>
</div>
<br>
<div class="ticket">
<h3><%= @ticket.booking.event.box.name %></h3>
<p><%= "#{@ticket.booking.user.full_name} & #{@ticket.booking.event.box.seats - 1} Guests" %></p>
<br>

<h3><%= @ticket.booking.event.name %></h3>
<p class="date"><%= @ticket.booking.event.start_date.strftime("%A %e %B %Y") %></p>  
<p class="date"><%= @ticket.booking.event.start_date.strftime("%l:%M %p") %></p>  
<br>
<div class="d-flex justify-content-around align-items-center">
<%= image_tag "qr.png", alt: "logo", align:"center", height: "200px", class: "logo" %>
</div>
</div>
</div> 

