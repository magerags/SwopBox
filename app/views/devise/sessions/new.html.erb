<div class="form_wrapper" style="background-image: url(<%= asset_path 'Landing-photo1.jpg' %>);">
  <div class="form">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
<div class="form_center_actions">
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-primary" %>
  </div>
  </div>
<% end %>
<p>New to SwopBox? <%= link_to "Join Now!", new_registration_path(resource_name) %></p>
</div>
</div>